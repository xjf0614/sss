{
  "wrapper": "div.collection-wrapper.wrapper",
  "sections": {
    "collection-header": {
      "type": "template--collection--header",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
          }
        }
      },
      "block_order": [
        "title"
      ],
      "settings": {
      }
    },
    "filtering": {
      "type": "main-collection-filtering",
      "settings": {
        "desktop_position": "sidebar"
      }
    },
    "product-grid": {
      "type": "template--collection",
      "blocks": {
        "product_card_image": {
          "type": "product_card_image",
          "settings": {
            "hover-effect": false,
            "enable_badges": true
          }
        },
        "product_card_title": {
          "type": "product_card_title",
          "settings": {
          }
        },
        "product_card_price": {
          "type": "product_card_price",
          "settings": {
          }
        },
        "product_card_button": {
          "type": "product_card_button",
          "settings": {
          }
        }
      },
      "block_order": [
        "product_card_image",
        "product_card_title",
        "product_card_price",
        "product_card_button"
      ],
      "settings": {
        "desktop-products-per-row": 2,
        "tablet-products-per-row": 2,
        "mobile-products-per-row": 1,
        "collection-products-per-page": 4,
        "pagination_options": "pagination_default"
      }
    }
  },
  "order": [
    "collection-header",
    "filtering",
    "product-grid"
  ]
}